                android:layout_height="wrap_content"/>
            <RadioButton
                android:id="@+id/btnShopping"
                android:text="ðŸ›’ Erosketak"
                android:tag="Erosketak"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                android:paddingVertical="12dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <RadioButton
                android:id="@+id/btnHome"
                android:text="ðŸ  Etxea"
                android:tag="Etxea"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                android:paddingVertical="12dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <RadioButton
                android:id="@+id/btnTransport"
                android:text="ðŸš— Garraioa"
                android:tag="Garraioa"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                android:paddingVertical="12dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <RadioButton
                android:id="@+id/btnNeeds"
                android:text="ðŸ’¡ Beharrak"
                android:tag="Beharrak"
